{
  "name": "io-openid-provider",
  "version": "3.0.0",
  "description": "OpenID Provider service",
  "type": "module",
  "scripts": {
    "validate": "swagger-cli validate ./openapi/definitions.yaml && swagger-cli validate ./openapi/generated/admin_api.yaml && swagger-cli validate ./openapi/generated/public_api.yaml",
    "openapi:bundle": "./openapi/bundle.sh $npm_package_version",
    "generate": "yarn openapi:bundle && npm-run-all generate:**",
    "generate:definitions": "rimraf ./src/generated/definitions && shx mkdir -p ./src/generated/definitions && gen-api-models --api-spec ./openapi/definitions.yaml --no-strict --out-dir ./src/generated/definitions",
    "generate:clients:io-auth": "rimraf ./src/generated/clients/io-auth && gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-backend/v13.0.0/openapi/generated/api_fims.yaml --no-strict --out-dir ./src/generated/clients/io-auth --request-types --response-decoders --client",
    "start": "node dist/main.js",
    "dev": "tsc && node -r dotenv/config dist/main.js",
    "prebuild": "shx rm -rf dist && yarn generate",
    "build": "tsc",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prettify": "prettier --write \"./**/*.ts\"",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx --fix && yarn run prettify",
    "predeploy": "npm-run-all build dist:modules",
    "dist:modules": "modclean -r -n default:safe && yarn install --production",
    "postinstall": "patch-package",
    "preversion": "auto-changelog  --config .auto-changelog.json --unreleased --commit-limit false --stdout --template preview.hbs",
    "version": "auto-changelog -p --config .auto-changelog.json --unreleased && git add CHANGELOG.md",
    "postversion": "git push && git push --tags",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@pagopa/io-functions-commons": "26.2.1",
    "@pagopa/ts-commons": "^10.2.1",
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.9",
    "express": "^4.17.1",
    "fp-ts": "^2.16.2",
    "helmet": "^4.6.0",
    "io-ts": "^2.2.16",
    "io-ts-types": "^0.5.16",
    "monocle-ts": "^2.3.13",
    "newtype-ts": "^0.3.5",
    "node-fetch": "^2.6.1",
    "oidc-provider": "^8.4.5",
    "patch-package": "^8.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prom-client": "^14.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^1.3.1",
    "@pagopa/openapi-codegen-ts": "^10.0.6",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/node-fetch": "^2.5.12",
    "@types/oidc-provider": "^8.4.4",
    "@types/supertest": "^2.0.11",
    "@vitest/coverage-v8": "^1.3.1",
    "auto-changelog": "^2.4.0",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-check": "^2.23.2",
    "fast-check-io-ts": "^0.5.0",
    "jose2": "npm:jose@^2.0.5",
    "modclean": "^3.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "supertest": "^6.1.6",
    "swagger-cli": "^4.0.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
