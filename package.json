{
  "name": "openid-provider",
  "version": "0.0.1",
  "description": "OpenID Provider service",
  "scripts": {
    "generate": "npm-run-all generate:*",
    "generate:definitions": "rimraf ./src/generated/definitions && shx mkdir -p ./src/generated/definitions && gen-api-models --api-spec ./openapi/index.yaml --no-strict --out-dir ./src/generated/definitions",
    "start": "tsc && node -r dotenv/config dist/src/main.js dotenv_config_path=.env.default | node_modules/bunyan/bin/bunyan",
    "build": "tsc",
    "test": "jest --coverage",
    "prettify": "prettier --write \"./**/*.ts\"",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx --fix && yarn run prettify",
    "prepare": "husky install"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@pagopa/cloudgaap-commons-ts": "^0.3.0",
    "@pagopa/io-functions-commons": "^22.2.1",
    "@pagopa/ts-commons": "^10.2.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "fp-ts": "^2.11.4",
    "helmet": "^4.6.0",
    "io-ts": "^2.2.16",
    "prom-client": "^14.0.0"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^1.3.1",
    "@pagopa/openapi-codegen-ts": "^10.0.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.11",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "io-ts-types": "^0.5.16",
    "jest": "^27.2.2",
    "monocle-ts": "^2.3.11",
    "newtype-ts": "^0.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
