datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Client {
  id                String @id @map("_id")
  grantTypes        String[]
  issuedAt          DateTime
  name              String
  organizationId    String
  redirectUris      String[]
  responseTypes     String[]
  scope             String
  // the serviceId maybe coulb be the same as clientId
  // so if the clientId can be defined by the caller
  // we can then remove the serviceId
  serviceId         String // remove it
  skipConsent       Boolean
}

model Interaction {
  expireAt    DateTime
  id          String @id @map("_id")
  issuedAt    DateTime
  params      Json
  payload     Json
  result      Json?
  returnTo    String
  // Session information
  identityId  String?
  cookieId    String?
}

model Grant {
  expireAt    DateTime
  id          String @id @map("_id")
  issuedAt    DateTime
  remember    Boolean
  scope       String?
  clientId    String
  identityId  String

  @@index([clientId, identityId])
}

model Session {
  expireAt    DateTime
  id          String @id @map("_id")
  identityId  String?
  issuedAt    DateTime
  uid         String @unique
}
